{
  "name": "@avorati/codegen-plugin-apollo-ssr",
  "version": "1.0.1",
  "description": "GraphQL Codegen plugin that generates SSR-friendly Apollo Client code for Next.js 14+ Server Components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc && npx cpx2 \"src/templates/**/*.hbs\" dist/templates",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "pretest": "yarn lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "graphql",
    "codegen",
    "plugin",
    "apollo",
    "ssr",
    "nextjs",
    "server-components"
  ],
  "author": "Douglas Walas Rodrigues Pardim <douglas.pardim@globalsys.com.br>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avorati/codegen-plugin-apollo-ssr.git"
  },
  "peerDependencies": {
    "@apollo/client": "^3.0.0",
    "@graphql-codegen/cli": "^5.0.0 || ^6.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0"
  },
  "dependencies": {
    "@graphql-codegen/plugin-helpers": "^6.0.0",
    "graphql": "^16.12.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "cpx2": "^2.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
